---
import Layout from '../layouts/Layout.astro';
import GameIsland from '../components/GameIsland';

const description = 'Tantangan harian menebak siapa yang lebih tua di antara tokoh publik Indonesia. Main 10 duel singkat, lihat jawaban, dan kembali esok hari.';

const structuredData = [
  {
    "@context": "https://schema.org",
    "@type": "Game",
    name: "Siapa Lebih Tua?",
    applicationCategory: "EducationalGame",
    operatingSystem: "Web",
    inLanguage: "id",
    url: Astro.url.href,
    description
  },
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Siapa Lebih Tua?",
    url: Astro.url.origin,
    potentialAction: {
      "@type": "PlayAction",
      target: Astro.url.href
    }
  }
];
---

<Layout
  title="Siapa Lebih Tua? | Tantangan Tebak Umur Harian"
  description={description}
  structuredData={structuredData}
>
  <main class="min-h-screen flex flex-col items-center justify-center py-12 px-4 relative">
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden -z-10 pointer-events-none">
      <div class="absolute top-[-10%] left-[-10%] w-[40%] h-[40%] rounded-full bg-purple-600/20 blur-[100px]"></div>
      <div class="absolute bottom-[-10%] right-[-10%] w-[40%] h-[40%] rounded-full bg-blue-600/20 blur-[100px]"></div>
    </div>

    <h1 class="text-5xl md:text-7xl font-black mb-4 tracking-tight text-center leading-tight">
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 drop-shadow-sm">
        Siapa Lebih Tua?
      </span>
    </h1>
    
    <p class="text-slate-300 mb-10 text-center max-w-2xl text-lg md:text-xl font-medium leading-relaxed">
      Tantangan harian menebak umur tokoh publik. <br class="hidden md:block" />
      <span class="text-white">10 duel singkat</span>. Pilih yang lebih tua. Jaga streakmu! ðŸ”¥
    </p>
		
		<div class="w-full max-w-md">
			<GameIsland client:load />
		</div>
	</main>
</Layout>
