---
import Layout from '../layouts/Layout.astro';
import GameIsland from '../components/GameIsland';

const description = 'Daily age-guess challenge featuring modern Indonesian public figures. Play 10 quick duels, reveal answers, keep your streak alive.';

const structuredData = [
  {
    "@context": "https://schema.org",
    "@type": "Game",
    name: "Who is Older?",
    applicationCategory: "EducationalGame",
    operatingSystem: "Web",
    inLanguage: "en",
    url: Astro.url.href,
    description
  },
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Who is Older?",
    url: Astro.url.origin,
    potentialAction: {
      "@type": "PlayAction",
      target: Astro.url.href
    }
  }
];
---

<Layout
  title="Who is Older? | Daily Age Guessing Game"
  description={description}
  structuredData={structuredData}
>
  <main class="min-h-screen flex flex-col items-center justify-center py-14 px-4 relative">
    <div class="absolute inset-0 -z-10 overflow-hidden pointer-events-none">
      <div class="absolute top-[-20%] left-[5%] w-[50%] h-[50%] rounded-full bg-sky-500/15 blur-[140px]"></div>
      <div class="absolute bottom-[-25%] right-[0%] w-[55%] h-[55%] rounded-full bg-purple-600/15 blur-[140px]"></div>
    </div>

    <div class="w-full max-w-4xl mx-auto text-center space-y-4 mb-8">
      <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-xs font-bold uppercase tracking-[0.2em] bg-sky-500/10 text-sky-100 border border-sky-400/30 shadow-lg shadow-sky-900/50">
        Daily · 10 duels
      </div>
      <h1 class="text-5xl md:text-7xl font-black tracking-tight text-transparent bg-clip-text bg-gradient-to-r from-sky-200 via-cyan-100 to-emerald-200 drop-shadow">
        Who is Older?
      </h1>
      <p class="text-slate-200 max-w-2xl mx-auto text-lg md:text-xl font-medium leading-relaxed">
        Daily guessing game with modern Indonesian public figures—YouTubers, singers, actors, comedians. Choose who is older in 10 duels, reveal quick facts, and keep your streak.
      </p>
    </div>
		
		<div class="w-full max-w-4xl">
			<GameIsland client:load />
		</div>
	</main>
</Layout>
