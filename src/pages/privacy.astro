---
import Layout from '../layouts/Layout.astro';

const title = 'Privacy | Who’s Older?';
const description = 'Privacy-first policy for the Who’s Older? game with minimal tracking.';
const structuredData = {
  "@context": "https://schema.org",
  "@type": "PrivacyPolicy",
  name: title,
  description,
  url: Astro.url.href
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <main class="max-w-3xl mx-auto p-6 sm:p-8">
    <div class="bg-slate-900/70 border border-slate-800 rounded-3xl p-6 sm:p-8 shadow-2xl space-y-6">
      <div class="inline-flex items-center px-4 py-2 rounded-full text-xs font-semibold uppercase tracking-[0.2em] bg-emerald-500/10 text-emerald-100 border border-emerald-400/30">Privacy</div>
      <h1 class="text-4xl font-black text-white">Privacy Policy</h1>
      <p class="text-slate-400 text-sm">Last updated: 23 November 2025</p>
      
      <div class="space-y-4 text-slate-200">
        <p>We value your privacy. This game is built to be privacy-friendly.</p>

        <div>
          <h2 class="text-2xl font-bold text-white mb-2">Data Collection</h2>
          <p>We do not collect personal information. We only use local storage on your device to store your daily progress and streak.</p>
        </div>
        
        <div>
          <h2 class="text-2xl font-bold text-white mb-2">Analytics</h2>
          <p>We use Cloudflare Web Analytics, which is privacy-first and does not use cookies or track you across sites.</p>
        </div>
      </div>

      <div class="pt-4">
          <a href="/" class="inline-flex items-center gap-2 text-sky-300 hover:text-white font-semibold transition">&larr; Back to game</a>
      </div>
    </div>
  </main>
</Layout>
