---
import Layout from '../layouts/Layout.astro';
import peopleData from '../data/people.json';

const title = 'Attribution | Who’s Older?';
const description = 'Attribution for image and data sources (Wikidata/Wikimedia Commons) used in Who’s Older?';
const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: title,
  description,
  url: Astro.url.href
};
---

<Layout title={title} description={description} structuredData={structuredData}>
  <main class="max-w-5xl mx-auto p-6 sm:p-8">
    <div class="bg-slate-900/70 border border-slate-800 rounded-3xl p-6 sm:p-8 shadow-2xl space-y-6">
      <div class="inline-flex items-center px-4 py-2 rounded-full text-xs font-semibold uppercase tracking-[0.2em] bg-indigo-500/10 text-indigo-100 border border-indigo-400/30">Attribution</div>
      <h1 class="text-4xl font-black text-white">Attribution</h1>
      <p class="text-slate-200">Images and data are provided by Wikidata and Wikimedia Commons under Creative Commons licenses.</p>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
        {peopleData.map(person => (
          <div class="flex items-center space-x-4 p-3 rounded-2xl border border-slate-800 bg-slate-900/60 shadow-lg">
            <img src={`/api/image/${person.id}`} alt={person.name} width="48" height="48" loading="lazy" decoding="async" class="w-12 h-12 rounded-full object-cover" />
            <div class="overflow-hidden">
              <div class="font-semibold text-white truncate">{person.name}</div>
              <a href={person.image} target="_blank" rel="noopener noreferrer" class="text-xs text-sky-300 hover:text-white underline-offset-4 hover:underline truncate block">
                  Image source
              </a>
            </div>
          </div>
        ))}
      </div>

      <div class="pt-4">
          <a href="/" class="inline-flex items-center gap-2 text-sky-300 hover:text-white font-semibold transition">&larr; Back to game</a>
      </div>
    </div>
  </main>
</Layout>
